<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LCSimple</title>
    <link rel="stylesheet" href="~/lib/icons/micro-interaction-icons.css" />
    <link rel="stylesheet" href="~/lib/icons/legacy.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fonts/">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
   
</head>
<body>
    <!-- Bootstrap NavBar -->
    <nav class="nav__container navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/Asset 2.svg" width="100" height="50" class="d-inline-block align-bottom" alt="Optum ORX_CCM">
            <span class="" style="line-height: 2;">ORX CCM Looking Glass</span>
        </a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <!--<li class="nav-item active">
                  <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">d
                  <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Pricing</a>
                </li>-->
                <!-- This menu is hidden in bigger devices with d-sm-none.
                     The sidebar isn't proper for smaller screens imo, so this dropdown menu can keep all the useful sidebar itens exclusively for smaller screens  -->
                <li class="nav-item dropdown d-sm-block d-md-none show">
                    <a class="dropdown-item uitk-c-button text-white " id="smallerscreenmenu" asp-area="" asp-controller="Home" asp-action="Index">
                        Dashboard
                    </a>
                    <a asp-area="" asp-controller="System" asp-action="Index" class="dropdown-item uitk-c-button text-white">System Monitor</a>
                    <a asp-area="" asp-controller="Job" asp-action="Index" class="dropdown-item uitk-c-button text-white">Job Views</a>
                    <!--- <a asp-area="" asp-controller="Control" asp-action="Index" class="dropdown-item uitk-c-button text-white">Control</a> -->
                    <a asp-area="" asp-controller="Project" asp-action="Index" class="dropdown-item uitk-c-button text-white">Project Document</a>
                </li><!-- Smaller devices menu END -->

            </ul>
        </div>
    </nav><!-- NavBar END -->
    <!-- Bootstrap row -->
    <div class="row" id="body-row">
        <!-- Sidebar -->
        <div id="sidebar-container" class="sidebar-expanded d-none d-md-block ">
            <!-- d-* hiddens the Sidebar in smaller devices. Its itens can be kept on the Navbar 'Menu' -->
            <!-- Bootstrap List Group -->
            <ul class="list-group">
                <!-- Separator with title -->
                <span>
                    <li style="float:left" class="list-group-item sidebar-separator-title text-muted d-flex align-items-center menu-collapsed">
                        <small>MAIN MENU</small>

                    </li>
                    <a href="#" data-toggle="sidebar-colapse" style="float:right; text-decoration:none; margin-top:6px;" class="">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span id="collapse-icon" class="fa fa-2x mr-3 "></span>
                            <span id="collapse-text" class="menu-collapsed"></span>
                        </div>
                    </a>
                </span>
                <!-- /END Separator -->
                <!-- Menu with submenu -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="uitk-c-button list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="uitk-icon uitk-icon-dashboard mr-3"></span>
                        <span class="menu-collapsed">Dashboard</span>
                        <span class="submenu-icon ml-auto"></span>
                    </div>
                </a>
                <!-- Submenu content
    <div id="submenu1" class="collapse sidebar-submenu">
        <a href="#" class="list-group-item list-group-item-action uitk-c-button">
            <span class="menu-collapsed">Reporting</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action uitk-c-button">
            <span class="menu-collapsed">System Monitoring</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action uitk-c-button">
            <span class="menu-collapsed">Control</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action uitk-c-button">
            <span class="menu-collapsed">Project Document</span>
        </a>
    </div> -->

                <a asp-area="" asp-controller="System" asp-action="Index" class="uitk-c-button list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="uitk-icon uitk-icon-vitals	 mr-3"></span>
                        <span class="menu-collapsed">System Monitor<span class="badge badge-pill badge-primary ml-2">1</span></span>
                        <span class="submenu-icon ml-auto"></span>
                    </div>
                </a>
                <!-- Submenu content
    <div id='submenu2' class="collapse sidebar-submenu">
        <a href="#" class="list-group-item list-group-item-action uitk-c-button ">
            <span class="menu-collapsed">Reporting</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action uitk-c-button ">
            <span class="menu-collapsed">Control</span>
        </a>
    </div>   -->
                <a asp-area="" asp-controller="Job" asp-action="Index" class="uitk-c-button list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="uitk-icon uitk-icon-big_data mr-3"></span>
                        <span class="menu-collapsed">Job Views</span>
                    </div>
                </a>
           <!-- <a asp-area="" asp-controller="Control" asp-action="Index" class="uitk-c-button list-group-item list-group-item-action">
                   <div class="d-flex w-100 justify-content-start align-items-center">
                       <span class="uitk-icon uitk-icon-gears mr-3"></span>
                       <span class="menu-collapsed">Control</span>
                   </div>
                </a>-->
                <!-- /END Separator -->
                <a asp-area="" asp-controller="Project" asp-action="Index" class="uitk-c-button list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="uitk-icon uitk-icon-computer_stats mr-3"></span>
                        <span class="menu-collapsed">Project Document</span>
                    </div>
                </a>

            </ul><!-- List Group END-->
        </div><!-- sidebar-container END -->
        <!-- MAIN -->
        <div class="col"  style="width:50%">

            @RenderBody()


        </div><!-- Main Col END -->
        <footer class="border-top footer text-muted" style="position:relative;">
            <div class="container" style="text-align:center;">
                &copy; 2020 - LCSimple - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div><!-- body-row END -->
   

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
